<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Hiddify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Hiddify"
    Shell.FlyoutBehavior="Flyout"
    Title="Hiddify">

    <ShellContent
        Title="Hiddify"
        Content="Параметры конфигурации"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Настройки"
        Content="Настройки"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />
    <ShellContent
        Title="Журнал"
        Content="Журнал"
        ContentTemplate="{DataTemplate local:Journal}"
        Route="Journal" />

</Shell>
