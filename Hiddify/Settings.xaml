<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hiddify.Settings"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="0,0,20,20" Spacing="24">
            <!-- Основные -->
            <Label Text="Основные" TextColor="#C0C0C0" FontSize="16" Padding="20"/>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Язык -->
                <Image Source="icon_language.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="0">
                    <Label Text="Язык" TextColor="White" FontSize="18"/>
                    <Label Text="Русский" TextColor="#C0C0C0" FontSize="14"/>
                </StackLayout>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Оформление -->
                <Image Source="icon_theme.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="0">
                    <Label Text="Оформление" TextColor="White" FontSize="18"/>
                    <Label Text="Системная тема" TextColor="#C0C0C0" FontSize="14"/>
                </StackLayout>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Сбор аналитики -->
                <Image Source="icon_analytics.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="0">
                    <Label Text="Сбор аналитики" TextColor="White" FontSize="18"/>
                    <Label Text="Сбор данных аналитики и отправка отчётов о сбоях для улучшения приложения" TextColor="#C0C0C0" FontSize="14"/>
                </StackLayout>
                <Switch Grid.Column="2" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Автоматически проверять IP-адрес -->
                <Image Source="icon_globe.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Автоматически проверять IP-адрес соединения" TextColor="White" FontSize="18"/>
                <Switch Grid.Column="2" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Отображение скорости -->
                <Image Source="icon_speed.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Отображение скорости в уведомлении" TextColor="White" FontSize="18"/>
                <Switch Grid.Column="2" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Тактильная обратная связь -->
                <Image Source="icon_vibration.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Тактильная обратная связь" TextColor="White" FontSize="18"/>
                <Switch Grid.Column="2" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Отключить оптимизацию батареи -->
                <Image Source="icon_battery.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="0">
                    <Label Text="Отключить оптимизацию батареи" TextColor="White" FontSize="18"/>
                    <Label Text="Отключение ограничений для оптимальной производительности VPN." TextColor="#C0C0C0" FontSize="14"/>
                </StackLayout>
            </Grid>

            <!-- Разделитель -->
            <BoxView HeightRequest="1" Color="#393646" Margin="0,0,0,0"/>

            <!-- Расширенные -->
            <Label Text="Расширенные" TextColor="#C0C0C0" FontSize="16" Padding="20"/>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Раздельное проксирование -->
                <Image Source="icon_split.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Раздельное проксирование" TextColor="White" FontSize="18"/>
                <Switch Grid.Column="2" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Ограничение памяти -->
                <Image Source="icon_memory.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <StackLayout Grid.Column="1" Spacing="0">
                    <Label Text="Ограничение памяти" TextColor="White" FontSize="18"/>
                    <Label Text="Включите, если у вас возникают ошибки нехватки памяти или частые сбои приложения." TextColor="#C0C0C0" FontSize="14"/>
                </StackLayout>
                <Switch Grid.Column="2" IsToggled="True" OnColor="#2A3A5F"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="20">
                <!-- Режим отладки -->
                <Image Source="icon_debug.png" HeightRequest="32" WidthRequest="32" VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Режим отладки" TextColor="White" FontSize="18"/>
                <Switch Grid.Column="2" IsToggled="False" OnColor="#2A3A5F"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>